---
const personalImageAlt = "Mateo";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-24 object-cover"
      src="/FOTO_MATEO_GRADO.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/mateo-quiroga-morales-b01912296"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Open to work</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, I'm Mateo
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +2 years of experience. <strong
      >Software Developer with a Bachelor of Science (BS) in Electronic
      Engineering</strong
    > from Colombia
    <span class="inline-block"
      ><img
        src="https://flagcdn.com/w40/co.png"
        alt="Colombia Flag"
        width="20"
      /></span
    >passionate about clean code and best practices.
  </p>

  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:qmate2002@gmail.com">
      <MailIcon class="size-4" />
      Get in Touch
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/mateo-quiroga-morales-b01912296">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
